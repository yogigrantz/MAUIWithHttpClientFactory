<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIMultiPage.SpecialOps"
             Title="SpecialOps">
    <VerticalStackLayout >
        <Label 
            x:Name="txtResult"
            Text="Welcome to .NET MAUI! Please click the button!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Click Me!" 
                Clicked="Button_Clicked" MaximumWidthRequest="200"   />

    </VerticalStackLayout>
</ContentPage>